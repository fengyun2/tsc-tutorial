{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "commonjs",
        "removeComments": true,
        "allowJs": true,
        "outDir": "src/js"
    },
    "include": [
        "src/ts/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/js/**/*"
    ]
}